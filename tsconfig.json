{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/macro/MarketGrowth.sav",
    "src/app/macro/marketgrowth/MarketGrowthChart.sav",
    "src/app/report/[artist_eng]/micro/components",
    "next.config.mjs",
    "dist/types/**/*.ts",
    "functions/.next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
